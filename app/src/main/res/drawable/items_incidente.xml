<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/colorGris" />
                <stroke
                    android:width="3dp"
                    android:color="@color/colorPrimaryDark" />
                <corners
                    android:radius="10dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/colorOrange" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>